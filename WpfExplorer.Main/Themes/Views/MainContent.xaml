<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:WpfExplorer.Main.UI.Views"
                    xmlns:units="clr-namespace:WpfExplorer.Main.UI.Units">
    <Style TargetType="{x:Type views:MainContent}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:MainContent}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <units:FolderTreeView ItemsSource="{Binding Roots}"
                                                  SelectionCommand="{Binding FolderChangedCommand}"/>
                            <StackPanel Grid.Column="1">
                                <Button Content="Go Up" Command="{Binding GoToParentCommand}" />
                                <Button Content="Go Back" Command="{Binding GoBackCommand}" />
                                <Button Content="Go Forward" Command="{Binding GoForwardCommand}" />
                            </StackPanel>
                            <units:FileListBox Grid.Column="2" ItemsSource="{Binding Files}"></units:FileListBox>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>